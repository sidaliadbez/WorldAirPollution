<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/grand">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/flag"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:transitionName="drapeau" />

        <TextView
            android:id="@+id/Nompay"
            android:layout_width="match_parent"
            android:layout_height="41dp"

            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:transitionName="nompay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textquality"
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/qualite"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textAlignment="viewStart" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:text="AQI value :"
            android:textColor="#000000"
            android:paddingLeft="20dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/Grandevaleur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="155"
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="#E86262"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CO" />
               <com.github.mikephil.charting.charts.PieChart
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/piechartco"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SO2" />
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/piechartso"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="NO2" />
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/piechartno"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="199dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PM2.5"
                    android:gravity="center"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/piechartpm25"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="213dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PM10"
                    android:gravity="center"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/piechartpm10"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


       <!--
        <Button
            android:id="@+id/aabez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="clickser"/>
            -->
    </LinearLayout>

</LinearLayout>
