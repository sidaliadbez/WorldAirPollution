<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/grand">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/flag"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:transitionName="drapeau" />

        <TextView
            android:id="@+id/Nompay"
            android:layout_width="match_parent"
            android:layout_height="41dp"

            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:transitionName="nompay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textquality"
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:textAlignment="viewEnd" />

            <TextView
                android:id="@+id/qualite"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textAlignment="viewStart" />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/card_detail_contry"
    android:layout_marginHorizontal="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingLeft="20dp"
            android:text="AQI value :"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/Grandevaleur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="155"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#E86262"
            android:textAlignment="center"/>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="#F9F9F9"
    android:layout_marginHorizontal="40dp"
    android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="0dp"

        android:background="@drawable/costum_button"
        android:src="@drawable/ic_molecule" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

           <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:rowCount="1">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">



                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechartco"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/textco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="CO" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechartso"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/textso2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SO2"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechartno"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/textno2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="NO2"
                    android:textColor="#000000"/>
            </LinearLayout>
           </GridLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechartpm25"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/textpm25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PM2.5"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">


                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechartpm10"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/textpm10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PM10"
                    android:textColor="#000000"/>
            </LinearLayout>
            </GridLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F9F9F9"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


       <GridLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:columnCount="1"
           android:rowCount="3">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1">
               <GridLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:columnCount="3"
                   android:rowCount="2">
                   <LinearLayout android:layout_rowWeight="1"
                       android:layout_columnWeight="1"
                       android:layout_width="0dp"
                       android:layout_height="0dp"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="35dp"
                           android:layout_height="35dp"
                           android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginTop="10dp"
                           android:src="@drawable/ic_temperature"
                           android:background="@drawable/costum_button"/>

                   </LinearLayout>

                   <TextView
                       android:layout_width="0dp"
                       android:layout_row="0"
                       android:layout_rowWeight="1"
                       android:layout_column="1"
                       android:layout_columnWeight="1"
                       android:gravity="center|left"
                       android:text="Temperature" />

                   <TextView
                       android:layout_width="0dp"
                       android:layout_rowWeight="1"
                       android:layout_columnWeight="2"
                       android:text="1700"
                       android:paddingRight="30dp"
                       android:gravity="right|center_vertical"
                       />
               </GridLayout>

           </LinearLayout>


           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1">
               <GridLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:columnCount="3"
                   android:rowCount="1">
                   <LinearLayout android:layout_rowWeight="1"
                       android:layout_columnWeight="1"
                       android:layout_width="0dp"
                       android:layout_height="0dp"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="35dp"
                           android:layout_height="35dp"
                           android:layout_gravity="center_horizontal|center_vertical"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/ic_pressure"
                           android:background="@drawable/costum_button"/>

                   </LinearLayout>
                   <TextView
                        android:layout_width="0dp"
                       android:layout_row="0"
                       android:layout_rowWeight="1"
                       android:layout_column="1"
                       android:layout_columnWeight="1"
                       android:gravity="center|left"
                       android:text="pressure" />
                   <TextView
                       android:layout_width="0dp"
                       android:layout_rowWeight="1"
                       android:layout_columnWeight="2"
                       android:text="1700"
                       android:paddingRight="30dp"
                       android:gravity="right|center_vertical"
                       />
               </GridLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:layout_columnWeight="1"
               android:layout_rowWeight="1">
               <GridLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:columnCount="3"
                   android:rowCount="1">
                   <LinearLayout android:layout_rowWeight="1"
                       android:layout_columnWeight="1"
                       android:layout_width="0dp"
                       android:layout_height="0dp"
                       android:orientation="vertical">

                       <ImageView
                           android:layout_width="35dp"
                           android:layout_height="35dp"
                           android:layout_gravity="center_horizontal|center_vertical"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/ic_wall_clock"
                           android:background="@drawable/costum_button"/>

                   </LinearLayout>

                   <TextView
                        android:layout_width="0dp"
                       android:layout_row="0"
                       android:layout_rowWeight="1"
                       android:layout_column="1"
                       android:layout_columnWeight="1"
                       android:gravity="center|left"
                       android:text="Last Update" />

                   <TextView
                       android:layout_width="0dp"
                       android:layout_rowWeight="1"
                       android:layout_columnWeight="2"
                       android:text="07-07-07-1999"
                       android:paddingRight="30dp"
                       android:gravity="right|center_vertical"
                       />
               </GridLayout>

           </LinearLayout>
       </GridLayout>
    </LinearLayout>
</LinearLayout>

</LinearLayout>
